{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "proevent/event-grid",
  "title": "Event Grid",
  "category": "widgets",
  "icon": "calendar",
  "description": "Display a grid of upcoming events",
  "supports": {
    "html": false
  },
  "attributes": {
    "limit": {
      "type": "number",
      "default": 6
    },
    "category": {
      "type": "string",
      "default": ""
    },
    "sort": {
      "type": "string",
      "default": "ASC"
    }
  },
  "editorScript": "file:./index.js"
}
